<section class="featured-products">
    <h1>Featured Collection</h1>
    <div class="product-container">
        {% assign watch_collection = collections['watch-collection'] %}
        {% if watch_collection %}
            {% for product in watch_collection.products %}
                <div class="product">
                    <img src="{{ product.featured_image.src | img_url: 'medium' }}" alt="{{ product.title }}">
                    <p>{{ product.title }}</p>
                </div>
            {% endfor %}
        {% else %}
            <p>No products found in the 'watch' collection.</p>
        {% endif %}
    </div>
</section>
<style>
    .featured-products {
        padding: 20px;
    text-align: center; 
}

.product-container {
    display: flex; 
    justify-content: space-around; 
    flex-wrap: wrap;
    max-width: 1200px; /
    margin: 0 auto; 
}

.product {
    flex: 0 0 calc(33.33% - 20px); 
    margin: 10px; 
    text-align: center; 
}

.product img {
    max-width: 100%; 
    height: auto; 
}

</style>